2000  REM  Pi
2010  CLS

2020  PI = 3.14159265358979
2030  ROWS = 24
2040  COLS = 80

2050  SLEEP 0
2060  X = RND(1)
2070  Y = RND(1)
2080  LOCATE INT(ROWS * Y + 1), INT(COLS * X + 1)
2090  N = N + 1

2100  IF (2 * X - 1)^2 + (2 * Y - 1)^2 > 1 THEN GOTO 2140
2110  M = M + 1
2120  PRINT CHR$(27) + "[7m" + " " + CHR$(27) + "[27m";

2140  RESULT = 4 * M / N
2150  S$(1) = "Result: " + LEFT$(STR$(RESULT), 12)
2160  S$(0) = "Actual: " + LEFT$(STR$(PI), 12)

2170  FOR K = 0 TO 1
2180  LOCATE ROWS - K, COLS - LEN(S$(K))
2190  PRINT S$(K);
2200  NEXT K

2210  IF ABS(RESULT - PI) > 0.00001 THEN GOTO 2050
2220  GOTO 90000
